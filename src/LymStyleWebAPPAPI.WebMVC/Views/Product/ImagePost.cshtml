@model LymStyleWebAPPAPI.Web.Models.DTO.ImageField
@{
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}
<hr />
<div class="row">
    <div class="col-md-4">
@using (Html.BeginForm ("ImagePost",  
                        "Product",  
                        FormMethod.Post,  
                        new { enctype = "multipart/form-data" }))  
{                    
    <label for="file">Upload Image:</label>
            <input type="hidden" name="id" asp-for="id"/>
                <input type="file" name="image"  id="id" class="form-control" />
            <br>
            <br>
            <input type="submit" value="Upload Image" class="btn btn-primary btn-sm" />
            <br><br>  
    @ViewBag.Message  
}
    </div>
</div>

<div>
    <a class="btn btn-info btn-sm" asp-controller="Adm" asp-action="Index">Back</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
